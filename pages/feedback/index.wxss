/* pages/feedback/index.wxss */
page{
  background-color: #eeeeee;
}
.fb_main{
  padding:20rpx;
  color: #666;
}
.fb_tips{
  display: flex;
  flex-wrap: wrap;
}
.fb_tips text{
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_content{
  background-color: #fff;
  margin-top: 20rpx;
}
.fb_content textarea{
  padding: 10rpx;
}

.fb_tool{
  display: felx;
  flex-wrap: wrap;
}
button{
  width: 90rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  font-size: 40rpx;
  padding: 0;
  background-color: rgb(245, 241, 241);
}
.img_item{
  flex: 5;
} 
.img_item image{
  width: 30%;
  text-align: center;
}
.fb_submit{
  width: 30%;
  height: 80rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}




