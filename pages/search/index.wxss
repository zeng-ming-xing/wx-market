/* pages/search/index.wxss */
page{
  background-color: rgb(230, 227, 227);
  padding: 20rpx;
}
.search_row{
  height: 90rpx;
  display: flex;
}
.search_row input{
  flex:4;
  padding-left: 10rpx;
  height: 70%;
  background-color: white;
  border-radius: 10rpx;
}
.search_row button{
  flex: 1;
  padding: 0;
  height: 70%;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_content{
  margin-top: 30rpx;
}
.search_item{
  background-color: #fff;
  padding-top: 15rpx 10rpx;
  font-size: 26rpx;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding:20rpx;
}
