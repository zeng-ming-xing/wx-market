/* pages/goods_list/index.wxss */

.tab_item {
    display: flex;
    height: 230rpx;
    border: 3rpx solid rgb(236, 232, 232);
}

.img_item {
    width: 30%;
    height: 100%;
}

.right_item {
    width: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /*该属性设置文本空白环绕*/
}

.item_title {
    width: 100%;
    /*以下四行代码设置打点操作*/
    overflow: hidden;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    /*该属性可以对某行进行打点操作*/
    -webkit-line-clamp: 2;
    font-size: 30rpx;
    margin-top: 30rpx;
}

.item_price {
    font-size: 30rpx;
    color: red;
}